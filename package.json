{
	"name": "exp-map",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"start": "next start",
		"build": "npm run prepare-asset && rm -rf .next/cache && next build",
		"lint": "biome lint --write ./src",
		"format": "biome format --write ./src",
		"check": "biome check --write ./src && eslint ./src --fix",
		"tsc": "tsc --watch",
		"test": "vitest",
		"prepare": "panda codegen && npx panda",
		"pull-content": "tsx --tsconfig tsconfig.json scripts/pull-content.ts main",
		"generate-metadata": "dotenv -e .env tsx --tsconfig tsconfig.json  scripts/generate/vault-object.ts main",
		"copy-metadata": "tsx --tsconfig tsconfig.json  scripts/copy-obsidian-metadata.ts main",
		"copy-attachment": "tsx --tsconfig tsconfig.json  scripts/copy-posts-assets-to-public.ts main",
		"generate": "npm run generate-metadata && npm run copy-metadata && npm run copy-attachment",
		"prepare-asset": "npm run pull-content && npm run generate",
		"debug": "cross-env NODE_OPTIONS='--inspect' next dev"
	},
	"dependencies": {
		"@ark-ui/react": "^4.6.0",
		"@babel/standalone": "^7.26.4",
		"@next/third-parties": "^15.1.6",
