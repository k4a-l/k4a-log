		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.1",
		"remark-wiki-link-plus": "^1.1.1",
		"swr": "^2.3.0",
		"tocbot": "^4.32.3-0",
		"ts-pattern": "^5.6.2",
		"unified": "^11.0.5",
		"unist-builder": "^4.0.0",
		"uuid": "^11.0.5",
		"vfile-matter": "^5.0.0",
		"yaml": "^2.7.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
